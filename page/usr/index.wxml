<view class="container">
  <view class="page-body">
    <view class="build_list_detail">
      <view class="list_flex-wrp" style="flex-direction:row;">
        <view class="flex-item item-90">
          请输入本机电话号码
        </view>
        <view class="flex-item item-10">
        </view>
      </view>
      <view class="list_flex-wrp" style="flex-direction:row;">
        <view class="flex-item item-10">
          <image src="../../../image/phone.png" class="tip" />
        </view>
        <view class="flex-item item-90">
          <input type='text' placeholder="请输入11位手机号" placeholder-style="color:#888" value="{{phone}}" bindinput="phoneChange"></input>
        </view>
      </view>
      <button type="primary" style="font-size:10pt;" bindtap='submitUser'>用户验证</button>
    </view>
  </view>
</view>