/* pages/push/push.wxss */

.bottom_box
{
  position: relative;
  width: 30px; 
  height: 50px; 
  margin-left:calc(100% / 14 - 15px); 
  margin-right:calc(100% / 14 - 15px);
  display:inline-block;
}

.bottom_button
{
  display:inline-block;
  position: absolute;
  width: 35px; 
  height: 35px; 
}

.bottom_button :active{
  opacity:0.55;
}

.bottom_text
{
  position: absolute;
  display:inline-block;
  color: #ffffff;
  width: 100%;
  font-size:10px;
  bottom: 0;
  text-align: center;
}
.pusher{
  width:100%;
  height:100vh;
}
.word{
  width:100%-65px;height:25%;position:absolute;top:75%;margin-left:55px;color:white;
  overflow-y: hidden;
}

.wordy{
  color:yellowgreen;
  overflow: visible;
  font-size: 9pt;
  white-space:normal;
}
.wordw{
  color:white;
  overflow-x:visible;
  font-size: 10pt;
  white-space:normal;
}