/* page/me/me.wxss */
@import "../common/lib/weui.wxss";
.mehead{
  height:90px;
  width:100%;
  background-color:#373937;
  text-align: left;
  font-size:10pt;
  color:#fff;
  padding-top: 30px;
}
.list_flex-wrp{
  display:flex;
  padding:5px;
  margin:1px auto;
  width:90%;
  text-align: center;
}
.department{
  background-color:#fff;
  font-size: 10pt;
  border-bottom: 1px solid #dcdcdc;
}
.mehead image{
  width:50px;
  height:50px;
}
.item-25{
  text-align: center;
  width:25%;
  padding:3px;
}
.item-33{
  width:33%;
}
.item-70{
  text-align: left;
  width:70%;
  border-left: 1px solid #888;
  padding-left:20px;
  color:#888;
}
.mename{
  text-align: left;
  font-size: 9pt;
}
.mefunction{
  color:#888;
  width:96%;
  margin: 1px auto;
  text-align: center;
  margin-top:5px;
  display:table;
  padding:3px;
  background-color:#fff;
  border-bottom:1px solid #cacaca;
}
.metitle{
  width:95%;
  padding:5px;
  text-align: left;
  border-bottom: 1px solid #cacaca;
  font-size: 10pt;
  font-weight: bold;
}
.meitems{
  margin:2% auto;
  text-align: center;
  width:96%;
}
.meitem{
  float:left;
  width: 24%;
  padding-top:5px;
  padding-bottom:5px;
  height:65px;
}
.meitem image{
  width:30px;
  height:30px;
}
.meitem text{
  font-size:10pt;
}