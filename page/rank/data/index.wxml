        <input type="number" style='height:50px;line-height:50px;border-bottom: 1px solid #000;' placeholder="00" placeholder-style="color:#888;"></input>
      </view>
      <view class="item-10">'</view>
      <view class="item-25">
        <input type="number" style='height:50px;line-height:50px;border-bottom: 1px solid #000;' placeholder="00" placeholder-style="color:#888"></input>
      </view>
      <view class="item-10">"</view>
      <view class="item-30">
        <input type="number" style='height:50px;line-height:50px;border-bottom: 1px solid #000;' placeholder="000" placeholder-style="color:#888"></input>
      </view>
    </view>

    <view class="item bk" style='background-color:#3b413b;color:#ffffff;'>
      <view class="item-40">训练记录（次数）</view>
      <view class="item-60"></view>
    </view>

    <view class="item2 bk">
      <view class="item-30"></view>
      <view class="item-40">
        <input type="number" style='height:50px;line-height:50px;border-bottom: 1px solid #000;' placeholder="00" placeholder-style="color:#888"></input>
      </view>
