<view class="contain">
  <view class="main">
    <!--录入选项-->
    <view class="item bk">
      <view class="item-25 br">姓 名</view>
      <view class="item-55 br">
        <input placeholder="用户姓名" placeholder-style="color:#888" type='text' value="{{uname}}"></input>
      </view>
      <view class="item-30">
        <radio></radio>自己
      </view>
    </view>
    <view class="_item bk">
      <view class="item-20"></view>
      <view class="item-60">
        <!--联想选项-->
        <view class="item select">
          <view class="item-40 br">邓恒靖</view>
          <view class="item-60" style='color:#969696;font-size:9pt;'>马龙中队</view>
        </view>
        <view class="item select">
          <view class="item-40 br">邓多多</view>
          <view class="item-60" style='color:#969696;font-size:9pt;'>富源中队</view>
        </view>
        <view class="item select">
