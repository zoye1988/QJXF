          <view class="rank-title">
            <view class="item-15">
              <image src="../../../image/group.png"></image>
            </view>
            <view class="item-55">
              <view style='font-size:11pt;font-weight:bolder'>400米快速供水操</view>
              <view style='font-size:9pt'>记录时间：2018-01-21</view>
            </view>
            <view class="item-10" style='text-align:right'>
