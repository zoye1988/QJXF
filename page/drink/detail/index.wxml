<view class="home_note2">
  <view class="list_flex-wrp" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/dpt.png" class="tip2" />
      <text>所属单位</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.dptname}}
    </view>
  </view>
  <view class="list_flex-wrp" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/person.png" class="tip2" />
      <text>用车人员</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.uname}}
    </view>
  </view>
  <view class="list_flex-wrp" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/person.png" class="tip2" />
      <text>同行人员</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.partner}}
    </view>
  </view>
  <view class="list_flex-wrp2" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/other.png" class="tip2" />
      <text>申请原因</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.reason}}
    </view>
  </view>
  <view class="list_flex-wrp2" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/date.png" class="tip2" />
      <text>申请日期</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.creatime}}
    </view>
  </view>
  <view class="list_flex-wrp2" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/leader2.png" class="tip2" />
      <text>审批等级</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.jobtitle}}
    </view>
  </view>
  <view class="list_flex-wrp2" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/rescuer.png" class="tip2" />
      <text>签批领导</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.leader}}
    </view>
  </view>
  <view class="list_flex-wrp2" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/carin.png" class="tip2" />
      <text>返回时间</text>
    </view>
    <view class="flex-item item-75">
      {{alcohol.backtime}}
    </view>
  </view>
  <view class="list_flex-wrp2" style="flex-direction:row;">
    <view class="flex-item item-25">
      <image src="../../../image/type.png" class="tip2" />
      <text>当前状态</text>
    </view>
    <view class="flex-item item-75">
      <view wx:if="{{alcohol.cstatus==0}}">
        审批中
      </view>
      <view wx:if="{{alcohol.cstatus==2}}">
        未通过
      </view>
      <view wx:if="{{alcohol.cstatus==3}}">
        已审批
      </view>
      <view wx:if="{{alcohol.cstatus==4}}">
        已返回
      </view>
    </view>
  </view>
  <view class="list_flex-wrp2" wx:if="{{alcohol.cstatus==0 && alcohol.jobcode==job}}">
    <block wx:if="{{alcohol.leaderid=='' || alcohol.leaderid==openid}}">
      <button type="primary" style="font-size:10pt;" bindtap="carPassBtn" data-cid="{{alcohol.aid}}">同意审批</button>
      <button type="warn" style="font-size:10pt;" data-cid="{{alcohol.aid}}" bindtap="carDelayBtn">拒绝审批</button>
    </block>
  </view>
</view>